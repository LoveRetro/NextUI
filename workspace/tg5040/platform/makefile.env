# tg5040
ARCH = -O3 -Ofast
CFLAGS = -march=armv8-a+simd -mtune=cortex-a53 -flto
SDL = SDL2
# legacy linux paths
CFLAGS += -I$(PREFIX)/include
LDFLAGS = -L$(PREFIX)/lib
# multiarch support
CFLAGS += -I$(PREFIX)/include/$(BUILD_ARCH)
LDFLAGS += -L$(PREFIX)/lib/$(BUILD_ARCH)
# pkg-config
CFLAGS += $$(pkg-config --cflags sdl2 samplerate sqlite3 libzip )
LDFLAGS += $$(pkg-config --libs sdl2 samplerate sqlite3 libzip )
# not handled by pkg-config
CFLAGS += -DUSE_$(SDL)
LDFLAGS += -l$(SDL)_image -l$(SDL)_ttf -lpthread -ldl -lm -lz
