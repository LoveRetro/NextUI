        {
            "type": "shell",
            "label": "C/C++: gcc build macos - Utils",
            "command": "mkdir -p ${workspaceFolder}/workspace/all/common/build/macos && mv *.o ${workspaceFolder}/workspace/all/common/build/macos/",
            "args": [],
            "options": {
